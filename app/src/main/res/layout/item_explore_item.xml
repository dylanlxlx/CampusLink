<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:elevation="3dp"
    android:paddingHorizontal="4dp"
    android:paddingVertical="4dp">

    <View
        android:background="@drawable/white_background2"
        android:id="@+id/p_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:padding="10dp"
        android:id="@+id/iv_pic_e"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_title_e"
        app:layout_constraintStart_toStartOf="@+id/p_view"
        app:layout_constraintTop_toTopOf="@+id/p_view"
        app:srcCompat="@drawable/pic1"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tv_title_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="xxxx"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/p_view"
        app:layout_constraintStart_toEndOf="@+id/iv_pic_e"
        app:layout_constraintTop_toTopOf="@+id/p_view" />

    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="ï¿¥123"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/p_view"
        app:layout_constraintEnd_toEndOf="@+id/p_view"
        app:layout_constraintTop_toTopOf="@+id/p_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/p_view"
        app:layout_constraintStart_toStartOf="@+id/p_view"
        app:layout_constraintTop_toBottomOf="@+id/p_view" />


</androidx.constraintlayout.widget.ConstraintLayout>